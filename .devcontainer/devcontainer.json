{
  "name": "Peter's Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "options": ["--network=host"]
  },
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },
  "forwardPorts": [3005],
  "postCreateCommand": "git lfs pull && npm i"
}
